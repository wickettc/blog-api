{
    "name": "blog-api",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "nodemon ./bin/www",
        "dev": "DEBUG=myapp:* npm start",
        "winstart": "SET DEBUG=blog-api:* & npm start"
    },
    "dependencies": {
        "cookie-parser": "~1.4.4",
        "debug": "~2.6.9",
        "dotenv": "^8.2.0",
        "express": "~4.16.1",
        "mongoose": "^5.11.15",
        "morgan": "~1.9.1"
    },
    "devDependencies": {
        "eslint": "^7.2.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.22.1",
        "nodemon": "^2.0.7"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "node": true
        },
        "rules": {
            "no-unused-vars": [
                "warn"
            ],
            "indent": [
                "error",
                4
            ],
            "linebreak-style": [
                "off"
            ],
            "implicit-arrow-linebreak": [
                "off"
            ],
            "function-paren-newline": [
                "off"
            ],
            "consistent-return": [
                "off"
            ],
            "comma-dangle": [
                "off"
            ],
            "operator-linebreak": [
                "off"
            ],
            "object-curly-newline": [
                "off"
            ]
        }
    }
}
